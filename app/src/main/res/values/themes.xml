<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LemonTodo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_7</item>
        <item name="colorPrimaryVariant">@color/blue_7</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorSecondary">@color/blue_2</item>
        <item name="colorSecondaryVariant">@color/blue_7</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="fontFamily">@font/lxgw</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.LemonTodo.NoActionBar" parent="Theme.LemonTodo">
        <item name="windowActionBar">false</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.LemonTodo.Chip">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="PopupOverlay">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
    </style>

    <style name="ToolbarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="popupTheme">@style/PopupOverlay</item>
        <item name="theme">@style/MainToolbarTheme</item>
    </style>

    <!--设置按钮颜色-->
    <style name="MainToolbarTheme">
        <item name="colorControlNormal">@color/white_smoke</item>
    </style>

    <!-- 计划内容-->
    <style name="scheduleTextStyle">
        <item name="android:textColor">@color/dark_late_gray</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">2</item>
        <item name="android:lines">2</item>
        <item name="fontWeight">600</item>
    </style>

    <style name="scheduleTimeTextStyle">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="android:lines">1</item>
    </style>

</resources>