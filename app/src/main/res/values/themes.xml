<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LemonTodo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/steel_blue</item>
        <item name="colorPrimaryVariant">@color/steel_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.LemonTodo.NoActionBar" parent="Theme.LemonTodo">
        <item name="windowActionBar">false</item>
        <item  name="android:windowActivityTransitions">true</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.LemonTodo.Chip">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="PopupOverlay">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
    </style>

    <style name="ToolbarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="popupTheme">@style/PopupOverlay</item>
        <item name="theme">@style/MainToolbarTheme</item>
    </style>

    <!--设置按钮颜色-->
    <style name="MainToolbarTheme">
        <item name="colorControlNormal">@color/white_smoke</item>
    </style>

</resources>